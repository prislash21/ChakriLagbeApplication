<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

        <TextView
                android:id="@+id/tvSingleViewHeadTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="P"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>

        <TextView
                android:id="@+id/tvSingleViewRoadName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Android developer"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvSingleViewHeadTitle"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop" />

        <TextView
                android:id="@+id/tvSingleViewPoliceStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AppsFacto Limited"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/tvSingleViewDistrict"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tvSingleViewHeadTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvSingleViewRoadName" android:layout_marginLeft="8dp"/>

        <TextView
                android:id="@+id/tvSingleViewDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="Experience: N/O"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvSingleViewPoliceStation"
                app:layout_constraintTop_toBottomOf="@+id/tvSingleViewRoadName" />

        <TextView
                android:id="@+id/tvSingleViewStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Deadline: 21 September, 2019"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tvSingleViewHeadTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvSingleViewPoliceStation" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>